@model SinavYonetimUygulamasi.Models.SubTopic
@{
    ViewData["Title"] = "Alt Konu Ekle";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Eğitmen Paneli / <a href="@Url.Action("CourseList", "Course")">Derslerim</a> / <a href="@Url.Action("ManageTopics", "Course", new { id = ViewBag.CourseId })">Konular</a> /</span> Alt Konu Ekle
    </h4>

    <partial name="_AlertsPartial" />

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header">Yeni Alt Konu Ekle</h5>
                <div class="card-body">
                    <form asp-action="AddSubtopic" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input type="hidden" asp-for="TopicId" />

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label">Alt Konu Adı</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                            <a asp-action="ManageSubtopics" asp-route-topicId="@Model.TopicId" class="btn btn-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Form submit olayını dinle
        document.querySelector('form').addEventListener('submit', function(e) {
            // Form submit işlemi öncesinde konsola bilgi yazdır
            console.log('Form gönderiliyor... TopicId: ' + document.querySelector('input[name="TopicId"]').value);
        });
    </script>
} 