@model SinavYonetimUygulamasi.Models.Course
@{
    ViewData["Title"] = "Ders Sil";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Eğitmen Paneli / <a href="@Url.Action("CourseList", "Course")">Derslerim</a> /</span> Ders Sil
    </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header">Ders Silme Onayı</h5>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h6 class="alert-heading fw-bold mb-2">Uyarı</h6>
                        <p class="mb-0">
                            Bu dersi silmek istediğinize emin misiniz? Bu işlem geri alınamaz ve derse ait tüm konular, alt konular ve sorular da silinecektir.
                        </p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Ders Adı</label>
                        <p><strong>@Model.Name</strong></p>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Oluşturulma Tarihi</label>
                        <p><strong>@(Model.CreatedAt?.ToString("dd/MM/yyyy") ?? "-")</strong></p>
                    </div>
                    
                    <form asp-action="DeleteConfirmed" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div class="mt-4">
                            <button type="submit" class="btn btn-danger me-2">Evet, Sil</button>
                            <a href="@Url.Action("CourseList", "Course")" class="btn btn-outline-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 